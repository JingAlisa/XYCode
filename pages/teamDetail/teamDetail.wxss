/* pages/teamDetail/teamDetail.wxss */

.teamContainer {
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.team-header {
  margin-top: 25rpx;
  padding-left: 0;
}

.team-header-border {
  position: relative;
  left: -50rpx;
  width: 1rpx;
  height: 75rpx;
  border-left: solid 20rpx #ff8080;
  float: left;
}

.team-title {
  position: relative;
  left: -20rpx;
  display: inline;
  font-size: 45rpx;
  line-height: 75rpx;
}

.team-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
  margin-top: 25rpx;
}

.team-info-text {
  font-size: 10pt;
  color: #aaa;
}

.team-divider {
  width: 90%;
  height: 1rpx;
  border-top: solid 1rpx #f5f5f5;
  position: relative;
  left: 5%;
  margin: 40rpx 0;
}

.team-area {
  
}

.team-area-title {
  color: #aaa;
  font-size: 35rpx;
}

.team-desc {
  color: #aaa;
  font-size: 10.5pt;
  text-align: justify;
  text-indent: 22pt;
  line-height: 50rpx;
}

