/* components/Team/AplForm/AplForm.wxss */

.contact {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 75rpx;
  margin-top: 25rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: #ddd 0rpx 1rpx 30rpx 0rpx;
  color: black;
}

.contact-indicator {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 20%;
  height: 100%;
}

.contact-input {
  width: 70%;
  height: 100%;
  /*background-color: blue;*/
}

.contact-picker {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 10%;
  height: 100%;
}

.contact-picker-img {
  height: 30rpx;
  width: 30rpx;
