.info {
  margin-top: 25rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: #ddd 0rpx 1rpx 30rpx 0rpx;
}

.info textarea {
  margin: 0;
  padding: 25rpx;
}

.btn-area {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 25rpx;
}

.btn {
  margin: 0;
  height: 75rpx;
  border-radius: 37.5rpx;
  box-shadow: #ff8080 0rpx 1rpx 50rpx 0rpx;
  background-color: #ff8080;
  color: white;
  font-size: 30rpx;
  line-height: 75rpx;
}

.btn-default {
  box-shadow: #aaa 0rpx 1rpx 50rpx 0rpx;
  background-color: #aaa;
}