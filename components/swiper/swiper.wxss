.sliderImg{
  width:100%;
  z-index: -100;
  position: absolute;
  top:0;
}

.sliderItem{
  font-size: 12pt;
}

.sliderContent{
  width: 80%;
  padding:10px;
}
.sliderContent view:nth-child(1){
  font-size: 16pt;
  margin-left: 10%;
}
.sliderContent view:nth-child(3){
  text-indent: 0.5cm;
}
.sliderItem:nth-child(2) {
  color:#800080;
}
.sliderItem:nth-child(3) {
  color:#8a2be2;
}

.sliderItem:nth-child(4) {
  color: white;
}
